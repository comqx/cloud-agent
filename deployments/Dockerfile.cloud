FROM golang:1.21-alpine AS builder

WORKDIR /app

# 复制 go mod 文件
COPY go.mod go.sum ./
RUN go mod download

# 复制源代码
COPY . .

# 构建 Cloud 服务
RUN CGO_ENABLED=1 GOOS=linux go build -o cloud ./cmd/cloud

# 运行阶段
FROM alpine:latest

RUN apk --no-cache add ca-certificates sqlite

WORKDIR /app

# 从构建阶段复制二进制文件
COPY --from=builder /app/cloud .

# 创建数据目录
RUN mkdir -p /app/data/files

EXPOSE 8080

CMD ["./cloud", "-addr", ":8080", "-db", "/app/data/cloud.db", "-storage", "/app/data/files"]

