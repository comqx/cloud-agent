FROM golang:1.21-bookworm AS builder

WORKDIR /app

# 复制 go mod 文件
COPY go.mod go.sum ./
RUN go mod download

# 复制源代码
COPY . .

# 构建 Agent
RUN CGO_ENABLED=1 GOOS=linux go build -o agent ./cmd/agent

# 运行阶段
FROM debian:bookworm-slim

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    ca-certificates \
    curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# 从构建阶段复制二进制文件
COPY --from=builder /app/agent .

# 复制配置文件
COPY configs/agent-plugins.yaml /app/configs/agent-plugins.yaml

# 创建数据目录
RUN mkdir -p /app/data

ENV CLOUD_URL=http://cloud:8080
ENV AGENT_ID=
ENV AGENT_NAME=agent
ENV K8S_CLUSTER_NAME=

CMD ["./agent", "-cloud", "${CLOUD_URL}", "-id", "${AGENT_ID}", "-name", "${AGENT_NAME}"]

