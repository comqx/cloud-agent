# 阶段1: 构建 Go 服务
FROM golang:bookworm AS go-builder

WORKDIR /app

# 安装 CGO 依赖（gcc 和 sqlite3 开发库）
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    gcc \
    libsqlite3-dev \
    && rm -rf /var/lib/apt/lists/*

# 复制 go mod 文件
COPY go.mod go.sum ./
RUN go mod download

# 复制源代码
COPY . .

# 构建 Cloud 服务（启用 CGO，使用原生 SQLite）
RUN CGO_ENABLED=1 GOOS=linux go build \
    -o cloud ./cmd/cloud

# 阶段2: 运行阶段
FROM hub.glodon.com/glodon-pub/debian:stable-slim

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    ca-certificates \
    libsqlite3-0 \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# 从构建阶段复制二进制文件
COPY --from=go-builder /app/cloud .

# 复制配置文件
COPY configs/agent-plugins.yaml /app/configs/agent-plugins.yaml

# 创建数据目录
RUN mkdir -p /app/data/files

EXPOSE 8080

ENV CLOUD_ADDR=:8080
ENV CLOUD_DB=/app/data/cloud.db
ENV CLOUD_STORAGE=/app/data/files
ENV CLOUD_CERT=
ENV CLOUD_KEY=

CMD ["sh", "-c", "exec ./cloud -addr \"${CLOUD_ADDR}\" -db \"${CLOUD_DB}\" -storage \"${CLOUD_STORAGE}\" -cert \"${CLOUD_CERT}\" -key \"${CLOUD_KEY}\""]

