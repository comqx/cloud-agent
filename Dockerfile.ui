# 构建阶段
FROM node:18-bookworm-slim AS builder

WORKDIR /app

# 复制 package 文件
COPY cloud-ui/package*.json ./
RUN npm ci

# 复制源代码并构建
COPY cloud-ui/ ./
RUN npm run build

# 运行阶段 - 使用 nginx 提供静态文件服务
FROM nginx:bookworm

# 复制构建产物到 nginx 目录
COPY --from=builder /app/dist /usr/share/nginx/html

# 复制 nginx 配置模板
COPY deployments/nginx.conf.template /etc/nginx/templates/default.conf.template

# 设置默认环境变量
ENV CLOUD_API_URL=http://cloud:8080
ENV CLOUD_WS_URL=http://cloud:8080

# 暴露端口
EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]

